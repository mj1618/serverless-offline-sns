  "compilerOptions": {
    "allowJs": true,
    "target": "es2022",
    "module": "es2022",
    "esModuleInterop": true,
    "outDir": "../dist",
    "allowUnreachableCode": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "moduleResolution": "node",
